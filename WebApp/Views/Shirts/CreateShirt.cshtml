@model Shirt

<h3>Shirt</h3>
<br/>

<form method="post" asp-action="CreateShirt">
    <div class="text-danger" asp-validation-summary="All"></div>
    <div class="mb-3 row">
        <div class="col-2">
            <label asp-for="Brand" class="col-form-label"></label>
        </div>
        <div class="col-6">
            <input asp-for="Brand" class="form-control" />
        </div>
        <div class="col">
            <span class="text-danger" asp-validation-for="Brand"></span>
        </div>
    </div>
    <div class="mb-3 row">
        <div class="col-2">
            <label asp-for="Gender" class="col-form-label"></label>
        </div>
        <div class="col-1 form-check">
            <input asp-for="Gender" class="form-check-input" type="radio" name="gender" id="men" value="Men">
            <label class="form-check-label">
                Men
            </label>
        </div>
        <div class="col-1 form-check">
            <input asp-for="Gender" class="form-check-input" type="radio" name="gender" id="women" value="Women">
            <label class="form-check-label">
                Women
            </label>
        </div>
        <div class="col">
            <span class="text-danger" asp-validation-for="Gender"></span>
        </div>
    </div>
    <div class="mb-3 row">
        <div class="col-2">
            <label asp-for="Color" class="col-form-label"></label>
        </div>
        <div class="col-2 row-2">
            <input type="color" class="form-control form-control-color" id="shirtcolor" value="#563d7c" asp-for="Color">
        </div>
        <div class="col">
            <span class="text-danger" asp-validation-for="Color"></span>
        </div>
    </div>
    <div class="mb-3 row">
        <div class="col-2">
            <label asp-for="Size" class="col-form-label"></label>
        </div>
        <div class="col-1 form-check form-check-inline">
            <input asp-for="Size" class="form-check-input" type="radio" name="size" id="s" value="S">
            <label class="form-check-label" asp-for="Size">
                S
            </label>
        </div>
        <div class="col-1 form-check form-check-inline">
            <input asp-for="Size" class="form-check-input" type="radio" name="size" id="m" value="M">
            <label class="form-check-label" asp-for="Size">
                M
            </label>
        </div>
        <div class="col-1 form-check form-check-inline">
            <input asp-for="Size" class="form-check-input" type="radio" name="size" id="l" value="L">
            <label class="form-check-label" asp-for="Size">
                L
            </label>
        </div>
        <div class="col">
            <span class="text-danger" asp-validation-for="Size"></span>
        </div>
    </div>
    <div class="mb-3 row">
        <div class="col-2">
            <label asp-for="Price" class="col-form-label"></label>
        </div>
        <div class="col-6">
            <input asp-for="Price" class="form-control" type="number"/>
        </div>
        <div class="col">
            <span class="text-danger" asp-validation-for="Price"></span>
        </div>
    </div>
    <div class="mb-3 row">
        <div class="col-2">
            <input type="submit" class="btn btn-primary" value="Submit" />
        </div>
        <div class="col-6">
            
        </div>
    </div>
</form>